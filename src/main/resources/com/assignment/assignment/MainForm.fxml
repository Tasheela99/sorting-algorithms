<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="912.0" prefWidth="1298.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.assignment.MainFormController">
    <!-- Button to upload the CSV file -->
    <Button layoutX="20.0" layoutY="26.0" onAction="#addCSVFileOnAction" prefHeight="70.0" prefWidth="368.0" text="Upload CSV" />

    <!-- TableView to display the CSV content -->
    <TableView fx:id="tableView" layoutX="20.0" layoutY="117.0" prefHeight="701.0" prefWidth="1256.0">
        <!-- The columns will be dynamically created in the controller -->
    </TableView>
    <Button fx:id="showColumnButton" layoutX="401.0" layoutY="835.0" prefHeight="47.0" prefWidth="103.0" text="Show Column" />

    <!-- ComboBox for numeric column selection -->
    <ComboBox fx:id="numericColumnComboBox" layoutX="21.0" layoutY="835.0" onAction="#handleNumericColumnSelection" prefHeight="47.0" prefWidth="200.0" promptText="Select numeric column" />

    <!-- TextField and Button for manual column selection -->
    <TextField fx:id="columnIndexField" layoutX="251.0" layoutY="835.0" prefHeight="47.0" prefWidth="150.0" promptText="Enter column index" />
   <Text layoutX="228.0" layoutY="863.0" strokeType="OUTSIDE" strokeWidth="0.0" text="OR" />
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.assignment.assignment.controller.MainFormController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Top section with upload button -->
    <Button onAction="#addCSVFileOnAction"
            text="Upload CSV"
            maxWidth="400.0"
            minHeight="50.0"/>

    <!-- TableView that grows and shrinks with the window -->
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <!-- The columns will be dynamically created in the controller -->
    </TableView>

    <!-- Bottom controls section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="numericColumnComboBox"
                  onAction="#handleNumericColumnSelection"
                  promptText="Select numeric column"
                  minWidth="200.0"
                  maxWidth="300.0"
                  minHeight="40.0"/>

        <Text text="OR"/>

        <TextField fx:id="columnIndexField"
                   promptText="Enter column index"
                   minWidth="150.0"
                   maxWidth="200.0"
                   minHeight="40.0"/>

        <Button fx:id="showColumnButton"
                text="Show Column"
                minWidth="100.0"
                minHeight="40.0"/>
    </HBox>

</VBox>
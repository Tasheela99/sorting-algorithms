<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.assignment.assignment.controller.SelectedColumnViewController"
      spacing="20"
      style="-fx-font-family: 'Comfortaa SemiBold';">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TableView fx:id="columnTableView"
               minWidth="300.0"
               prefWidth="350.0"
               maxWidth="500.0"
               HBox.hgrow="SOMETIMES"
               style="-fx-font-family: 'Comfortaa SemiBold';"/>

    <VBox spacing="15" HBox.hgrow="ALWAYS">
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="mergeSortButton"
                        text="Merge Sort"
                        minWidth="120.0"
                        minHeight="40.0"
                        style="-fx-font-family: 'Comfortaa SemiBold';"/>
                <TextField fx:id="mergeSortTimeTextField"
                           promptText="Merge Sort Time"
                           minWidth="200.0"
                           minHeight="40.0"
                           HBox.hgrow="ALWAYS"
                           style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="quickSortButton"
                        text="Quick Sort"
                        minWidth="120.0"
                        minHeight="40.0"
                        style="-fx-font-family: 'Comfortaa SemiBold';"/>
                <TextField fx:id="quickSortTimeTextField"
                           promptText="Quick Sort Time"
                           minWidth="200.0"
                           minHeight="40.0"
                           HBox.hgrow="ALWAYS"
                           style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="insertionSortButton"
                        text="Insertion Sort"
                        minWidth="120.0"
                        minHeight="40.0"
                        style="-fx-font-family: 'Comfortaa SemiBold';"/>
                <TextField fx:id="insertionSortTimeTextField"
                           promptText="Insertion Sort Time"
                           minWidth="200.0"
                           minHeight="40.0"
                           HBox.hgrow="ALWAYS"
                           style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="shellSortButton"
                        text="Shell Sort"
                        minWidth="120.0"
                        minHeight="40.0"
                        style="-fx-font-family: 'Comfortaa SemiBold';"/>
                <TextField fx:id="shellSortTimeTextField"
                           promptText="Shell Sort Time"
                           minWidth="200.0"
                           minHeight="40.0"
                           HBox.hgrow="ALWAYS"
                           style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="heapSortButton"
                        text="Heap Sort"
                        minWidth="120.0"
                        minHeight="40.0"
                        style="-fx-font-family: 'Comfortaa SemiBold';"/>
                <TextField fx:id="heapSortTimeTextField"
                           promptText="Heap Sort Time"
                           minWidth="200.0"
                           minHeight="40.0"
                           HBox.hgrow="ALWAYS"
                           style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </HBox>
        </VBox>

        <BarChart fx:id="sortingTimeBarChart"
                  VBox.vgrow="ALWAYS"
                  animated="false"
                  style="-fx-font-family: 'Comfortaa SemiBold';">
            <xAxis>
                <CategoryAxis label="Sorting Algorithm"
                              animated="false"
                              style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Time (ms)"
                            animated="false"
                            autoRanging="true"
                            style="-fx-font-family: 'Comfortaa SemiBold';"/>
            </yAxis>
        </BarChart>
    </VBox>
</HBox>